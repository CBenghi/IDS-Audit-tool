<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ids:ids xmlns:ids="http://standards.buildingsmart.org/IDS" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://standards.buildingsmart.org/IDS http://standards.buildingsmart.org/IDS/0.9.7/ids.xsd">
	<ids:info>
		<ids:title>Measure validity examples</ids:title>
	</ids:info>
	<ids:specifications>
		<ids:specification ifcVersion="IFC2X3" name="Wall requirement">
			<ids:applicability minOccurs="0" maxOccurs="unbounded">
				<ids:entity>
					<ids:name>
						<xs:restriction>
							<xs:pattern value="IFCWALL|IFCWALLSTANDARDCASE"/>
						</xs:restriction>
					</ids:name>
				</ids:entity>
			</ids:applicability>
			<ids:requirements>
				<!-- We are getting all properties, and mandating they have an IfcText measure, this is not possible -->
				<ids:property dataType="IFCTEXT">
					<ids:propertySet>
						<xs:restriction>
							<xs:pattern value=".*"/>
						</xs:restriction>
					</ids:propertySet>
					<ids:name>
						<xs:restriction>
							<xs:pattern value=".*"/>
						</xs:restriction>
					</ids:name>
				</ids:property>
			</ids:requirements>
		</ids:specification>
		<!-- The Pset_WallCommon.IsExternal property is defined as IfcBoolean, IfcText is not an acceptable value-->
		<ids:specification name="External wall requirement" ifcVersion="IFC2X3">
			<ids:applicability minOccurs="0" maxOccurs="unbounded">
				<ids:property dataType="IFCTEXT">
					<ids:propertySet>
						<ids:simpleValue>Pset_WallCommon</ids:simpleValue>
					</ids:propertySet>
					<ids:name>
						<ids:simpleValue>IsExternal</ids:simpleValue>
					</ids:name>
					<ids:value>
						<ids:simpleValue>TRUE</ids:simpleValue>
					</ids:value>
				</ids:property>
			</ids:applicability>
		</ids:specification>
	</ids:specifications>
</ids:ids>
